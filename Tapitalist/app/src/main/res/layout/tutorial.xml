<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="400dp"
    android:orientation="vertical"
    android:background="#063c49"
    android:padding="5dp"
    android:layout_gravity="center">

    <TextView
        android:id="@+id/exit"
        android:layout_width="23dp"
        android:layout_height="23dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="X"
        android:textColor="#ffffff" />

    <TextView
        android:id="@+id/tutorial2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:fontFamily="casual"
        android:gravity="center_vertical"
        android:text="TUTORIAL"
        android:textColor="#c4dfe6"
        android:textSize="40sp"/>

    <TextView
        android:id="@+id/tutorial3"
        android:layout_width="280dp"
        android:layout_height="55dp"
        android:layout_alignLeft="@+id/textView7"
        android:layout_alignStart="@+id/textView7"
        android:layout_below="@+id/tutorial2"
        android:background="@drawable/tutorialbuttons"
        android:fontFamily="casual"
        android:paddingTop="10dp"
        android:paddingLeft="25dp"
        android:text="1. Tap To Make Money!"
        android:textColor="#c4dfe6"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/tutorial4"
        android:layout_width="3500dp"
        android:layout_height="55dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tutorial3"
        android:background="@drawable/tutorialbuttons"
        android:fontFamily="casual"
        android:paddingLeft="25dp"
        android:paddingTop="10dp"
        android:text="2. Check Out Menu To Hire Friends!"
        android:textColor="#c4dfe6"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/tutorial5"
        android:layout_width="280dp"
        android:layout_height="55dp"
        android:layout_above="@+id/tutorial6"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/tutorialbuttons"
        android:fontFamily="casual"
        android:paddingLeft="25dp"
        android:paddingTop="10dp"
        android:text="3. Friends Make You Money!"
        android:textColor="#c4dfe6"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/tutorial6"
        android:layout_width="350dp"
        android:layout_height="55dp"
        android:layout_above="@+id/tutorial7"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="12dp"
        android:background="@drawable/tutorialbuttons"
        android:fontFamily="casual"
        android:paddingLeft="25dp"
        android:paddingTop="10dp"
        android:text="4. Check Out The Store! Go Shopping!"
        android:textColor="#c4dfe6"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/tutorial7"
        android:layout_width="280dp"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="12dp"
        android:background="@drawable/tutorialbuttons"
        android:fontFamily="casual"
        android:paddingLeft="25dp"
        android:paddingTop="10dp"
        android:text="5. Have Fun!"
        android:textColor="#c4dfe6"
        android:textSize="17sp" />

</RelativeLayout>
