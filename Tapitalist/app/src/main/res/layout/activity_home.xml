<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="com.example.paschal.imageswitch.HomeActivity"
    android:background="@drawable/home_background"
    android:scaleType = "centerCrop">

    <ImageView
        android:id="@+id/background"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignBottom="@+id/imgsw"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/home_background"
        android:scaleType="fitXY" />



<ImageSwitcher
    android:id="@+id/imgsw"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_centerHorizontal="true">

</ImageSwitcher>



    <Button
        android:id="@+id/get_money"
        android:layout_width="140dp"
        android:layout_height="130dp"
        android:layout_alignBottom="@+id/imgsw"
        android:layout_centerHorizontal="true"
        android:background="@android:color/transparent" />

    <Button
        android:id="@+id/menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/Tutorial"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/Tutorial"
        android:layout_marginTop="16dp"
        android:onClick="ShowPopup1"
        android:text="HIRE FRIENDS"
        android:textColor="#36a81c"
        android:padding="10dp"
        android:background="@drawable/menubuttons"

        />

    <Button
        android:id="@+id/lvlup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/Level"
        android:layout_alignRight="@+id/Level"
        android:layout_below="@+id/Level"
        android:layout_marginTop="15dp"
        android:background="@drawable/menubuttons"
        android:text="Level UP"
        android:padding="10dp"
        android:textColor="#36a81c" />

    <TextView
        android:id="@+id/moneycount"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_alignBaseline="@+id/menu"
        android:layout_alignBottom="@+id/menu"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_gravity="end"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="12dp"
        android:fontFamily="casual"
        android:gravity="end"
        android:textAlignment="textEnd"
        android:textColor="#36a81c"
        android:textSize="24sp"
        tools:text="Money" />

    <TextView
        android:id="@+id/Level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/moneycount"
        android:layout_alignRight="@+id/moneycount"
        android:layout_below="@+id/menu"
        android:text="LEVEL"
        android:textColor="#ffffff"
        android:textSize="18sp" />

    <Button
        android:id="@+id/Tutorial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/ReadMe"
        android:layout_alignStart="@+id/ReadMe"
        android:layout_below="@+id/menu"
        android:layout_marginTop="12dp"
        android:onClick="ShowPopup2"
        android:text="Tutorial"
        android:textSize="12sp"
        android:textColor="#36a81c"
        android:background="@drawable/menubuttons"/>

    <Button
        android:id="@+id/ReadMe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/Tutorial"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/menubuttons"
        android:onClick="ShowPopup3"
        android:padding="10dp"
        android:text="STORE"
        android:textColor="#36a81c" />

    <TextView
        android:id="@+id/imgsw2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imgsw"
        android:layout_toLeftOf="@+id/imgsw6"
        android:layout_toStartOf="@+id/imgsw6"
        android:background="@drawable/oliviacolor" />

    <TextView
        android:id="@+id/imgsw3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imgsw5"
        android:layout_marginBottom="18dp"
        android:layout_toLeftOf="@+id/imgsw"
        android:layout_toStartOf="@+id/imgsw"
        android:background="@drawable/stephencolor" />

    <TextView
        android:id="@+id/imgsw4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/imgsw6"
        android:layout_toRightOf="@+id/imgsw6"
        android:background="@drawable/abby2color"
         />

    <TextView
        android:id="@+id/imgsw5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="60dp"
        android:layout_marginLeft="18dp"
        android:layout_marginStart="18dp"
        android:layout_toEndOf="@+id/imgsw"
        android:layout_toRightOf="@+id/imgsw"
        android:background="@drawable/vijay2color" />

    <TextView
        android:id="@+id/imgsw6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imgsw4"
        android:layout_centerHorizontal="true"
        android:layout_gravity="start"
        android:layout_marginBottom="43dp"
        android:background="@drawable/densmore2color"
        android:textAlignment="textStart" />


</RelativeLayout>

